<p id="notice"><%= notice %></p>

<h1>マイページ</h1>

<%= link_to '記事作成', new_mypage_url, class: "btn btn-info" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <% if current_user.id == article.user_id%>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td class="hstack gap-3">
            <%= link_to '詳細', mypage_url(article), class: "btn btn-success mr-1" %>
            <%= link_to '編集', edit_mypage_path(article), class: "btn btn-warning" %>
            <%= button_to '削除',article, class: "btn btn-danger", method: :delete %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
